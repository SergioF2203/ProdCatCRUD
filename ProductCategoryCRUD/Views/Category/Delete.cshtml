@model ProductCategoryCRUD.Models.Category
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger"><strong>Delete</strong></h2>

<h3>Are you sure you want to delete this?</h3>
<h3 class="text-danger">This will delete all entries with this attribute.</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            <h5>
                @Html.DisplayFor(model => model.Name)

            </h5>
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a href="/Category/Index/"><input type="button" class="btn btn-default" value="Cancel" /></a>
        </div>
    }
</div>
